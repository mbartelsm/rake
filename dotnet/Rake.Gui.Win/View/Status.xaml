<UserControl x:Class="Rake.Gui.Win.View.Status"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Rake.Gui.Win.View"
             mc:Ignorable="d"
             d:DesignHeight="25" d:DesignWidth="500">
    <StatusBar HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch">
        <StatusBarItem>
            <TextBlock>Log:</TextBlock>
        </StatusBarItem>
        <StatusBarItem>
            <TextBlock TextTrimming="CharacterEllipsis">Application started</TextBlock>
        </StatusBarItem>
    </StatusBar>
</UserControl>
